{
  "name": "root",
  "private": true,
  "dependencies": {
    "lerna": "^3.5.1",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.13.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "prettier": "^1.16.3",
    "use-yarn": "^2.2.0"
  },
  "scripts": {
    "build": "yarn run build",
    "clean": "git clean -fdX .",
    "start": "lerna run start --stream --parallel --scope origin --scope origin-dapp",
    "lint": "lerna run lint",
    "preinstall": "npx use-yarn",
    "format": "eslint **/**/*.js --quiet --fix",
    "test": "node scripts/test.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run lint"
    }
  },
  "workspaces": {
    "packages": [
      "experimental/*",
      "origin-contracts",
      "origin-bridge",
      "origin-dapp",
      "origin-dapp-creator-client",
      "origin-dapp-creator-server",
      "origin-discovery",
      "origin-faucet",
      "origin-growth",
      "origin-identity",
      "origin-ipfs-proxy",
      "origin-js",
      "origin-linking",
      "origin-messaging",
      "origin-mobile",
      "origin-notifications",
      "origin-tests",
      "origin-token",
      "origin-token-transfer-client",
      "origin-token-transfer-server"
    ],
    "nohoist": [
      "react-native",
      "react-native/**",
      "openzeppelin-solidity"
    ]
  }
}
