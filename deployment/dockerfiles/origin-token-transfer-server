FROM node:10

WORKDIR /app

ENV NODE_ENV=production

COPY package*.json ./
COPY lerna.json ./
COPY ./origin-contracts ./origin-contracts
COPY ./origin-token ./origin-token
COPY ./origin-token-transfer-server ./origin-token-transfer-server
COPY ./scripts ./scripts

RUN yarn install

COPY ./origin-contracts/releases/0.8.6/build/ ./origin-contracts/build/

CMD cd origin-token-transfer-server; yarn run migrate && yarn start
